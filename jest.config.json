{
    "clearMocks": true,
    "moduleFileExtensions": ["js", "json", "ts"],
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "@src/(.*)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
        "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "setupFiles": ["dotenv/config"],
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": 80
        }
    }
}