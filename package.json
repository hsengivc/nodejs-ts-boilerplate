{
  "name": "nodejs-ts-boilerplate",
  "version": "0.1.0",
  "main": "server.ts",
  "repository": "https://github.com/hsengivc/nodejs-ts-boilerplate.git",
  "author": "hsengiv",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.23.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.0.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.0",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "start": "NODE_ENV=dev ts-node-dev -r tsconfig-paths/register --respawn --pretty --transpile-only src/server.ts",
    "precommit": "lint-staged",
    "prettier": "prettier --config .prettierrc.json --write src/**/*.ts",
    "lint": "eslint \"src/**/**.ts\"",
    "lint-fix": "eslint --fix \"src/**/**.ts\"",
    "pretty": "prettier --write \"src/**/**.ts\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,ts,test,test.ts,spec.ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
